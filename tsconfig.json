{
	"compilerOptions": {
		"resolveJsonModule": true,
		"target": "es2016",
		"experimentalDecorators": true,
		"module": "commonjs",
		"rootDir": "src",
		"outDir": "./dist",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"allowUnusedLabels": true,
		"skipLibCheck": true
	},
	"include": ["src/**/*"],
	"exclude": ["**/*.spec.ts"]
}
